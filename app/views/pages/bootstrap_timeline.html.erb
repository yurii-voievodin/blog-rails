<div class="container">
  <header class="d-flex justify-content-center py-3">
    <ul class="nav nav-pills">
        <%= link_to "/", rel: 'nofollow', class: "nav-link" do %>
        <i class="bi bi-house-fill"></i>
        <% end %>
    </ul>
</header>
</div>

<div class="col-8 mx-auto py-md-5">

    <div class="row fs-5">
        <div class="col-md-6">
            <h1>Bootstrap 5 + Timeline</h1>
            <p>This example contains implementation of popular "timeline" feature.</p>
            <p>Made on clear <code>HTML</code> with <a href="https://getbootstrap.com" target="_blank">Bootstrap 5</a></p>
            <div class="my-3">
                <a href="/bootstrap_5_timeline.zip" rel="nofollow" class="btn btn-primary mt-2"><i class="bi bi-arrow-down-circle"></i> Download example</a>
                <a href="/pages/tesla_timeline" rel="nofollow" class="btn btn-success mt-2">Live demo</a>
            </div>
        </div>
        <div class="col-md-6"><img src="<%= image_path('bootstrap_timeline/Timeline.png') %>" class="img-fluid"/></div>
    </div>

    <div class="row mt-5">
        <div class="fs-3">Code example</div>
        <div class="mt-2"><img src="<%= image_path('bootstrap_timeline/Code_example.png') %>" class="img-fluid rounded"/></div>
    </div>

    <%= render "layouts/footer" %>
</div>
