<% @title = "Yura Voevodin - Timeline" %>
<%= render "layouts/header" %>

<div class="col-9 mx-auto py-md-5">

    <h2 class="text-center">My Timeline</h2>

    <div class="container py-2 mt-4 mb-4">

      <div class="row">
        <div class="col-auto text-center flex-column d-none d-sm-flex">
            <div class="row h-50"></div>
            <i class="bi bi-keyboard" style="font-size: 1.5rem; color: gray;"></i>
            <div class="vr h-50 mx-4 mt-2"></div>
        </div>

        <div class="col py-2">
            <div class="card border-success">
                <div class="card-body">
                    <div class="float-right text-muted">10 February 2021</div>
                    <h4 class="card-title">CoachNow</h4>
                    <p class="card-text">I'm started a part-time remote work at <b>CoachNow</b> company</p>
                </div>
            </div>
        </div>
    </div>

    <% @timeline.each do |event| %>

    <% if event['date'] == "" && event['title'] == "" && event['description'] == "" && event['comment'] != "" %>

    <div class="row">
        <div class="col-sm-1"><div class="vr h-100 mx-4"></div></div>
        <div class="col">
            <p><%= markdown(event['comment']) %></p>
        </div>
    </div>

    <% else %>

    <div class="row">
        <div class="col-auto text-center flex-column d-none d-sm-flex">
            <div class="vr h-50 mx-4 mb-2"></div>

            <% if event.key?("symbol") %>
            <% symbol = event["symbol"] %>
                <i class="bi <%= symbol['icon'] %>" style="font-size: 1.5rem; color: <%= symbol['color'] %>;"></i>
            <% else %>
            <%= image_pack_tag 'dot.svg', class: "rounded-circle mx-auto d-block", size: '25x25' %>
            <% end %>
            
            <div class="vr h-50 mx-4 mt-2"></div>
        </div>

        <div class="col py-2">
            <div class="card">
                <div class="card-body">
                    <div class="float-right text-muted"><%= event['date'] %></div>
                    <h4 class="card-title"><%= event['title'] %></h4>
                    <div class="card-text">
                        <%= markdown(event['description']) %>
                    </div>
                    <% if event.key?("data") %>
                    <% data = event["data"] %>
                    <div>
                        <%= image_pack_tag data["image"], class: "img-thumbnail w-50 h-50" %>
                    </div>
                    <% end %>
                    
                </div>
            </div>
        </div>
    </div>

    <% end %>

    <% end %>

    <div class="row">
        <div class="col-auto text-center flex-column d-none d-sm-flex">
            <div class="vr h-50 mx-4 mb-2"></div>
            <i class="bi bi-heart" style="font-size: 1.5rem; color: red;"></i>
            <div class="h-50 mx-4 mt-4"></div>
        </div>

        <div class="col py-2">
            <div class="card">
                <div class="card-body">
                    <div class="float-right text-muted">July 1990</div>
                    <h4 class="card-title">When it's all started</h4>
                    <div class="card-text"></div>
                </div>
            </div>
        </div>
    </div>

</div>

<%= render "layouts/footer" %>
</div>